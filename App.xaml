<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="Plantilla.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Plantilla">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>

            <!-- NavigationView Background Resources -->
            <SolidColorBrush x:Key="NavigationViewDefaultPaneBackground" Color="{ThemeResource SystemChromeMediumLowColor}"/>
            <SolidColorBrush x:Key="TopNavigationViewTopPaneBackground" Color="{ThemeResource SystemChromeMediumColor}"/>
            
            <!-- Other app resources here -->
        </ResourceDictionary>
    </Application.Resources>
</Application>