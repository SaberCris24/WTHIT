<Window
    x:Class="Plantilla.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Plantilla"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Plantilla">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Padding="12">

            <!-- Margen = izq, arriba, derecha, abj.-->
            <TextBlock
                x:Name="TitleTextBlock"
                Text="What The Hell Is This?"
                FontSize="40"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="180,25,0,0"/>

            <AutoSuggestBox 
                x:Name="SearchBox"
                PlaceholderText="Search for processes"
                QueryIcon="Find"
                Width="300"
                HorizontalAlignment="Right"
                Margin="0,60,25,0"
                QuerySubmitted="SearchBox_QuerySubmitted"
                TextChanged="SearchBox_TextChanged"
                SuggestionChosen="SearchBox_SuggestionChosen">
            </AutoSuggestBox>   
        </Grid>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0">
        </StackPanel>
        
        <!-- BotÃ³n About en la esquina inferior izquierda -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,0,20">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <Button x:Name="AboutButton"
                        Click="AboutButton_Click"
                        Width="40"
                        Height="40"
                        Padding="0"
                        CornerRadius="20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center">
                     <FontIcon
                        Glyph="&#xE946;"
                        FontSize="16"/>
                </Button>
                <TextBlock Text="About"
                    HorizontalAlignment="Center"
                    Margin="0,5,0,0"
                    FontSize="12"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>